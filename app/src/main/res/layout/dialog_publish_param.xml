<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/tvNormalColor"
            android:text="@string/publish_param_title"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/fl_close"
            android:layout_gravity="right"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_close"
                android:src="@mipmap/ic_dialog_close"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </FrameLayout>

    </FrameLayout>
    <EditText
        android:id="@+id/et_name"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:textColorHint="@color/KeepColor"
        android:textColor="@color/tvNormalColor"
        android:background="@null"
        android:paddingBottom="15.5dp"
        android:hint="@string/publish_param_name_hint"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View style="@style/LineLongStyle"/>
    <EditText
        android:id="@+id/et_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:textColorHint="@color/KeepColor"
        android:textColor="@color/tvNormalColor"
        android:hint="@string/publish_param_content_hint"
        android:background="@null"
        android:paddingBottom="15.5dp"
        android:paddingTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View style="@style/LineLongStyle"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_save"
            android:textSize="16sp"
            android:text="@string/save"
            android:gravity="center"
            android:textColor="@color/StvColor"
            android:background="@drawable/selector_sell"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_save_on"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/StvColor"
            android:background="@drawable/selector_main"
            android:layout_weight="1"
            android:text="@string/publish_param_go_on"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>