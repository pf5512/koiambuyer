<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_wx_bg"
    android:layout_width="280dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="9dp"
        android:textSize="18sp"
        android:textColor="@color/tvNormalColor"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_input"
        android:background="@drawable/shape_dialog_et_bg"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_msg"
        android:layout_marginLeft="15dp"
        android:textColor="@color/mainColor"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:background="@color/BgColor"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:textColor="@color/TitleColor"
            android:textSize="18sp"
            android:background="@drawable/selector_w_tv_left"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/BgColor"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_sure"
            android:textSize="18sp"
            android:textColor="@color/mainColor"
            android:gravity="center"
            android:background="@drawable/selector_w_tv_right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>