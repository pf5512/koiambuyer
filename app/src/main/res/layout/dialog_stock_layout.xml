<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@color/transparentColor"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:paddingLeft="133.5dp"
            android:background="@color/StvColor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tvNormalColor"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_price"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tvNormalColor"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/minorColor"
                android:textSize="12sp" />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8.5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            android:layout_width="110dp"
            android:layout_height="110dp">
            <ImageView
                android:id="@+id/iv_good"
                android:src="@mipmap/good_default"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <com.hc360.koiambuyer.widget.StockNumView
        android:background="@color/StvColor"
        android:id="@+id/snv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.hc360.koiambuyer.widget.StockNumView>
    <View
        android:background="@color/StvColor"
        android:layout_width="match_parent"
        android:layout_height="105dp"/>

    <com.hc360.koiambuyer.widget.SingleTextView
        app:radius="0dp"
        android:id="@+id/stv_submit"
        android:gravity="center"
        android:textColor="@color/StvColor"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <android.support.v7.widget.CardView
        android:visibility="gone"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/StvColor"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/stock_total_money"
                android:textColor="@color/tvNormalColor"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_total_price"
                android:layout_weight="1"
                android:textColor="@color/buyerColor"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_submit"
                android:background="@color/buyerColor"
                android:text="@string/submit_right_now"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:layout_width="120dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>