<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:background="@drawable/shape_dialog_wx_bg"
    android:layout_height="wrap_content">
    <TextView
        android:paddingTop="25dp"
        android:paddingLeft="15dp"
        android:text="@string/dialog_identify_input"
        android:textSize="15sp"
        android:textColor="@color/tvNormalColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_input"
            android:background="@drawable/shape_dialog_et_bg"
            android:layout_width="138dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/iv"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <View
        android:background="@color/BgColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:id="@+id/tv"
        android:text="@string/confirm"
        android:gravity="center"
        android:textSize="18sp"
        android:clickable="true"
        android:background="@drawable/selector_w_tv"
        android:textColor="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>