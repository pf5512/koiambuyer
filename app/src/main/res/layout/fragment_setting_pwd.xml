<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/StvColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:background="@color/mainColor"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:paddingTop="23dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:background="@color/mainColor"
        android:paddingLeft="30dp"
        android:paddingTop="2dp"
        android:paddingBottom="37.5dp"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        style="@style/LLStyle"
        android:paddingTop="50dp">
        <EditText
            android:id="@+id/et_set"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="@string/input_pwd_first"
            android:inputType="textPassword"
            android:paddingBottom="15dp"
            android:textColorHint="@color/HintColor"
            android:textSize="@dimen/et_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/LineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_marginTop="28dp"
        style="@style/LLStyle">
        <EditText
            android:id="@+id/et_confirm"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="@string/input_pwd_second"
            android:inputType="textPassword"
            android:paddingBottom="15dp"
            android:textColorHint="@color/HintColor"
            android:textSize="@dimen/et_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/LineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <include layout="@layout/layout_stv"/>
</LinearLayout>