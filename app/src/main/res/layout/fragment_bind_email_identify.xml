<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/StvColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_remind"
    android:background="@color/BgColor"
    android:paddingTop="12.5dp"
    android:paddingBottom="7.5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:textSize="@dimen/tv_min"
    android:textColor="@color/minorColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_identify"
            android:layout_weight="1"
            android:hint="@string/input_email_identify"
            android:textColor="@color/tvNormalColor"
            android:textColorHint="@color/HintColor"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            style="@style/EtStyle" />

        <TextView
            android:id="@+id/btn_get_identify"
            android:text="@string/get_identify"
            android:gravity="right"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:textSize="15sp"
            android:textColor="@color/mainColor"
            style="@style/BtnRightStyle" />
    </LinearLayout>

    <include layout="@layout/layout_stv"/>
</LinearLayout>