<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/StvColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_home"
            android:drawableTop="@mipmap/ic_back"
            style="@style/HomeBottomTvStyle"
            android:text="@string/home_home" />
        <ImageView
            android:id="@+id/iv_publish"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@mipmap/publish_buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableTop="@mipmap/ic_back"
            android:id="@+id/tv_me"
            style="@style/HomeBottomTvStyle"
            android:text="@string/home_me" />
    </LinearLayout>
</LinearLayout>
