<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/StvColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_date"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_date"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:text="@string/my_purchase_date"
                android:drawablePadding="5.5dp"
                android:layout_gravity="center"
                android:drawableRight="@mipmap/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <View
            android:layout_width="1px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fl_state"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_state"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:text="@string/my_purchase_state"
                android:drawablePadding="5.5dp"
                android:layout_gravity="center"
                android:drawableRight="@mipmap/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:background="@color/BgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_xrecyclerview"/>
        <View
            android:visibility="gone"
            android:id="@+id/bg"
            android:background="#3000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>