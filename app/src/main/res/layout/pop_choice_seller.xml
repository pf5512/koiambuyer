<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@color/StvColor"
        android:paddingTop="18dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:text="定位城市"
        android:textSize="14sp"
        android:textColor="@color/tvNormalColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingBottom="18dp"
        android:background="@color/StvColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/tvNormalColor"
            android:text="北京市"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_local"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="刷新定位"
            android:textColor="@color/buyerColor"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:background="@color/LineColor"
        android:layout_height="1px"/>
    <android.support.v7.widget.RecyclerView
        android:background="@color/StvColor"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="270dp"></android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/dismiss"
        android:background="@color/PopBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>