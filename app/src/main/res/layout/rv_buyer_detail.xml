<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:background="@color/StvColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="192dp">
        <ImageView
            android:id="@+id/iv_goods"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:maxLines="2"
        android:textColor="@color/tvNormalColor"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_money"
            android:textSize="12sp"
            android:textColor="@color/HintColor"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_find_like"
            android:layout_width="14dp"
            android:layout_height="12dp" />
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/HintColor"
            android:id="@+id/tv_chat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_find_share"
            android:layout_width="12dp"
            android:layout_height="12dp" />
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/HintColor"
            android:id="@+id/tv_keep_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/foot_line"
        android:layout_width="match_parent"
        android:background="@color/LineColor"
        android:layout_height="1px"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_foot"
        android:layout_width="match_parent"
        android:text="@string/no_more"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_foot"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="@string/no_want"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_publish"
            android:textColor="@color/buyerColor"
            android:layout_width="wrap_content"
            android:text="@string/publish_purchase"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
</LinearLayout>